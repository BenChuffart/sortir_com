{% extends 'base.html.twig' %}

{% block body %}
    <h2>{{ app.user.firstname }} {{ app.user.lastname }}</h2>

    <div class="blockProfile">
    <table>
        <tr>
            <td><span>Nickname</span> {{ user.pseudo }}</td>
        </tr>
        <tr>
            <td><span>Firstname</span> {{ user.firstname }}</td>
        </tr>
        <tr>
            <td><span>Lastname</span> {{ user.lastname }}</td>
        </tr>
        <tr>
            <td><span>Email</span> {{ user.email }}</td>
        </tr>
        <tr>
            <td><span>Phone</span> {{ user.phone }}</td>
        </tr>
        <tr>
            <td><span>Campus</span> {{ user.campus }}</td>
        </tr>
    </table>

    {% if user == app.user %}
        <div class="edit">
           <button><a href="{{ path('users_editProfile', {'id': app.user.id}) }}" title="editProfile">Edit</a></button>
           <button><a href="{{ path('users_editPassword', {'id': app.user.id}) }}" title="editPassword">Change Password</a>
        </div>
    {% endif %}
    </div>
{% endblock %}

{% block title %} My Profile {{ parent() }} {% endblock %}
